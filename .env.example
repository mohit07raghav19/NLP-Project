# NVD API Configuration
# Get your free API key at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=your_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/cve_database.db
# For PostgreSQL: postgresql://user:password@localhost:5432/cve_db

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Data Collection Settings
MAX_RETRIES=3
RATE_LIMIT_DELAY=6
CACHE_ENABLED=True

# NLP Model Settings
SPACY_MODEL=en_core_web_sm
TRANSFORMERS_MODEL=bert-base-uncased
USE_GPU=False

# Analysis Settings
ENABLE_VISUALIZATIONS=True
EXPORT_FORMAT=json
